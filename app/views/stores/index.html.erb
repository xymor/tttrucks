<p id="notice"><%= notice %></p>

<h1>Listing Stores</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Open</th>
      <th>Image</th>
      <th>Photos</th>
      <th>Tags</th>
      <th>Description</th>
      <th>Lat</th>
      <th>lng</th>
      <th>Props</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.email %></td>
        <td><%= store.open %></td>
        <td><%= store.image %></td>
        <td><img src="<%= store.photos  ? store.photos[0] : ''  %>"/></td>
        <td><%= store.tags %></td>
        <td><%= store.description %></td>
        <td><%= store.lat %></td>
        <td><%= store.lng %></td>
        <td><%= store.props %></td>
        <td><%= link_to 'Show', store %></td>
        <td><%= link_to 'Edit', edit_store_path(store) %></td>
        <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Store', new_store_path %>
